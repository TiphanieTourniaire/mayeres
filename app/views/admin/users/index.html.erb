<div class="container">

  <h1><%= link_to new_admin_user_path do %>
        <i class="fas fa-plus"></i>
      <% end %>
      Clients</h1>

  <table>
    <tr>
      <th></th>
      <th>Nom</th>
      <th>Email</th>
      <th>Tél</th>
      <th>Ardoise</th>
      <th>Commandes</th>
      <% if current_selling_range %>
        <th></th>
      <% end %>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to edit_admin_user_path(user) do %>
            <i class="far fa-edit"></i>
          <% end %>
        </td>
        <td>
          <% if user.mayeres? %>
            <i class="fab fa-medium-m"></i>
          <% end %>
          <%= link_to "#{user.first_name} #{user.last_name}", admin_user_path(user) %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.tab %> €</td>
        <td><%= user.orders.validated.count %> <%= "commande".pluralize(user.orders.validated.count) %></td>
        <% if current_selling_range %>
          <td><%= simple_form_for([:admin, user, Order.new]) do |f| %>
                <%= f.submit("Créer", class: "btn btn-link") %>
              <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>

</div>
