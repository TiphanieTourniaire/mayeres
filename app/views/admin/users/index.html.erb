<div class="container">

  <h1>Clients</h1>

  <p><%= link_to "Ajouter un client", new_admin_user_path %></p>

  <table>
    <tr>
      <th>Nom</th>
      <th>Email</th>
      <th>Tél</th>
      <th>Ardoise</th>
      <th>Commandes</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.mayeres? %>
            <i class="fab fa-medium-m"></i>
          <% end %>
          <%= link_to "#{user.first_name} #{user.last_name}", admin_user_path(user) %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.tab %> €</td>
        <td><%= pluralize(user.orders.validated.count, "commande") %></td>
        <td><%= link_to "Editer", edit_admin_user_path(user) %> | <%= link_to " Supprimer", admin_user_path(user), data: { method: "delete" } %> </td>
      </tr>
    <% end %>
  </table>

</div>
