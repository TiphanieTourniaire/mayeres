<div class="container">

    <h1> <span class="flex-title"><i class="fas fa-users fa-gray"></i> <%= @users.count %> clients </span>
         <span class="flex-add"><%= link_to "Créer un client", new_admin_user_path %></span>
    </h1>

  <table class="admin-table">
    <tr>
      <th>Nom</th>
      <th>Email</th>
      <th>Tél</th>
      <th>Ardoise</th>
      <th>Commandes</th>
      <% if current_selling_range %>
        <th></th>
      <% end %>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.mayeres? %>
            <i class="fab fa-medium-m"></i>
          <% end %>
          <%= link_to "#{user.first_name.capitalize} #{user.last_name.capitalize}", admin_user_path(user) %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.tab %> €</td>
        <td><%= user.orders.validated.count %> <%= "commande".pluralize(user.orders.validated.count) %></td>
        <% if current_selling_range %>
          <td><%= simple_form_for([:admin, user, Order.new]) do |f| %>
                <%= f.submit("Créer", class: "btn btn-link") %>
              <% end %>
          </td>
        <% end %>
        <td>
          <%= link_to edit_admin_user_path(user) do %>
            <i class="far fa-edit fa-green"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

</div>
