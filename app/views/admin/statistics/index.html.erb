<div class="container">
  <h1>Statistiques - Général</h1>
  <p><%= link_to "Retour", :back %></p>

  <h2>Chiffre d'affaires</h2>

  <ul>

    <% @categories.each do |category| %>
      <li><%= category.name %> : <%= category.selling_range_sales_for(2019) %>€</li>
    <% end %>

  </ul>
  <h2>Récolte par légumes</h2>

  <ul>
    <% @orders_by_year.each do |date, orders_number| %>
      <li>
        <p>
          <%= date.strftime('%Y') %> : <%= pluralize(orders_number, "commande") %> -
          <%= link_to "Détail", admin_statistic_path(date.strftime('%Y')) %>
        </p>
      </li>
    <% end %>
  </ul>


</div>
