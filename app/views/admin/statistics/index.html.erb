<div class="container">
  <h1>Statistiques - Général</h1>

  <ul>
    <% @orders_by_year.each do |date, orders_number| %>
      <li>
        <p>
          <%= date.strftime('%Y') %> : <%= pluralize(orders_number, "commande") %> -
          <%= link_to "Détail", admin_statistic_path(date.strftime('%Y')) %>
        </p>
      </li>
    <% end %>
  </ul>


    <% @categories.each do |category| %>
      <h2><%= category.name %> : <%= category.general_sales_for %>€</h2>
      <ul>
        <% category.products.each do |product| %>
          <li><%= product.name %> : <%= pluralize(product.general_crops_for,product.unit) %> - <%= product.general_sales_for %> €</li>
        <% end %>
      </ul>
    <% end %>

</div>
