<div class="container">

  <h1>Mes commandes</h1>

  <% if @myorders.count == 0 %>
    <p>Vous n'avez pas encore passé de commande</p>
    <%= link_to "Retour", :back %>
  <% end %>

  <% @myorders.each do |order| %>
    <li>Commande du <%= order.selling_range.created_at.strftime("%d-%m-%Y") %> -
    Montant <%= order.total_price %> €
    <%= link_to "Voir le détail", order_path(order) %>
    </li>
  <% end %>

  <% if current_order == true %>
    <%= link_to "Retour à ma commande", order_path(current_order) %>
  <% end %>

</div>
