<div class="container">
<h2>Modifier mon compte</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


    <%= f.input :first_name, autofocus: true, autocomplete: "Prénom", label: "Prénom" %>
    <%= f.input :last_name, autofocus: true, autocomplete: "Nom", label: "Nom" %>
    <%= f.input :phone_number, autofocus: true, autocomplete: "Numéro de téléphone", label: "Téléphone" %>
    <%= f.input :email, autofocus: true, autocomplete: "email", label: "Email" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    <% end %>

    <%= f.input :password, autocomplete: "off", label: "Nouveau mot de passe" %> <i>(Laissez ce champ vide si vous ne souhaitez pas changer votre mot de passe)</i><br />
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>

    <%= f.input :password_confirmation , autocomplete: "off", label: "Confirmation du nouveau mot de passe" %>

    <%= f.input :current_password , autocomplete: "off" %> <i>(Renseignez votre mot de passe actuel pour pouvoir enregistrer vos modifications)</i><br />

    <%= f.button :submit, class: "btn btn-primary", value: 'Enregistrer les changements' %>
<% end %>

<%= link_to "Retour", :back %>

</div>


