<div class="container">
  <div class="card_form">
    <h1>Les nouvelles de la semaine</h1>
    <% if @post.content? %>
      <p><%= @post.content %></p>
    <% end %>
  </div>

  <div id="customer_list_cart">
    <div class="row">
      <div class="col-8">
        <div id="products-list">
          <%= render 'product_list_title' %>
          <%= render 'product_list' %>
        </div>
      </div>

      <div class="col-4">
        <div class="card_form" id="order-cart">
          <%= render 'cart_title' %>
          <%= render 'cart' %>
          <%= render 'cart_validation' %>
        </div>
      </div>
    </div>
  </div>
</div>
