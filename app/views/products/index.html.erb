<div class="container">

  <% if current_user.admin? %>
    <div class="card_form">
      <h1>Ajouter un produit</h1>
      <%= render 'form', product: @product %>
    </div>
  <% end %>


  <div id="customer_list_cart">

    <div class="card_form">
      <%= render 'product_list' %>
    </div>

    <div class="card_form">
      <%= render 'cart' %>
      <% if current_order.product_orders.count != 0 %>
        <% if current_order.status != 1 %>
          <div class="flex">
            <%= form_for(@order) do |f| %>
              <%= f.hidden_field :status, value: 1 %>
              <%= f.submit 'Valider la commande', class: "btn btn-primary btn-centered" %>
            <% end %>
          </div>
        <% else %>
          <p>Cette commande a déjà été validée</p>
          <%= link_to "Modifier la commande", reset_status_order_path(@order) %>
        <% end  %>
      <% end %>
    </div>

  </div>

</div>
