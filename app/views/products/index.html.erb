<h1> Products </h1>

<%= link_to "Ajouter un produit", new_product_path %>

<ul>
<% @products.each do |product| %>
  <li>
    <%= product.name.capitalize %>
    <%= product.price.to_f / 100 %> €
    <%= product.unit %>
    <%= form_for @product_order do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add" %>
      <% end %>
    <%= link_to "Détails", product_path(product) %>
    <%= link_to "Editer", edit_product_path(product) %>
    <%= link_to "Supprimer", product_path(product), method: :delete, data: { confirm: "Tu es sûr.e ?" } %>
  </li>
<% end %>
<%= link_to "Voir le panier", cart_path %>
</ul>