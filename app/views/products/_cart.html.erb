<h1><i class="fas fa-shopping-basket"></i> Votre panier</h1>

<div id="cart">
  <% if @product_orders.blank? %>
    <div id="no_item_expl">
      <p>Votre panier est vide</p>
    </div>
  <% else %>
    <table>
      <% @product_orders.each do |product_order| %>
        <tr>
          <%= render 'product_orders/show', product_order: product_order, order: @order %>
        </tr>
      <% end %>
    </table>

    <h4>Prix total du panier : <%= @order.reload.total_price %> â‚¬</h4>
  <% end %>
</div>
