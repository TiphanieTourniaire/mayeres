<%= form_for(@product) do |f| %>

  <%= f.label :name, "Nom du produit" %>
  <%= f.text_field :name %>

  <%= f.label :price, "Prix de vente" %>
  <%= f.number_field :price, step: :any %>

  <%= f.label :unit, "Unité de vente" %>
  <%= f.select :unit, collection: ['Kilo','100 grammes', 'Pièce']  %>

  <%= f.label :active, "Dispo cette semaine" %>
  <%= f.check_box :active %>

  <%= f.label :photo %>
  <%= f.file_field :photo %>
  <%= f.hidden_field :photo_cache %>

  <%= f.submit %>

<% end %>
