<%= simple_form_for(@product) do |f| %>
  <%= f.input :name, label: "Nom du produit", placeholder: "Ex: Aubergines" %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :category, label: "Catégorie", collection: ['Légumes','Viande', 'Produit transformé'] %>
  <%= f.input :price, label: "Prix de vente", placeholder: "3.30 - Prix au KILO ou à l'UNITE (pas aux 100G)" %>
  <%= f.input :unit, label: "Unité de vente", collection: ['100g', 'pièce', 'kilo'] %>
  <%= f.input :active, as: :boolean, label: "Disponible cette semaine", checked_value: true, unchecked_value: false %>
  <%= f.input :step, label: "Quantités suggérées", default: [].to_yaml %>
  <%= f.input :photo, label: "Photo", hidden_field: :photo_cache %>
  <%= f.button :submit, "Valider", class: "btn btn-primary" %>

<% end %>
