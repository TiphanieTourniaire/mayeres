<td>
  <div class="small-cart-content-line">
    <div class="small-cart-content-avatar">
      <% if product_order.product.photo.present? %>
        <%= cl_image_tag product_order.product.photo %>
      <% end %>
    </div>
    <div class="small-cart-content-info">
      <div class="small-cart-content-title">
        <div>
          <%= product_order.product.name %>
        </div>
        <div class="small-cart-content-price"><%= product_order.item_price %> â‚¬</div>
      </div>
      <div class="small-cart-content-details">
        <div><%= product_order.quantity %> <%= product_order.product.unit.pluralize(product_order.quantity) %></div>
      </div>
      <div>
        <% if order.status == "pending" %>
          <%= link_to "Supprimer", product_order_path(product_order), method: :delete, class: "small-cart-delete" %>
        <% end %>
      </div>

    </div>

  </div>


